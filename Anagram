class Solution {
    public static boolean areAnagrams(String s1, String s2) {
        char str1[]=s1.toCharArray();
        char str2[]=s2.toCharArray();
        Arrays.sort(str1);
        Arrays.sort(str2);
        String string1=new String(str1);
        String string2=new String(str2);
        if (string1.equals(string2)){
            return true;
        }
        else{
            return false;
        }
        
    }
}
